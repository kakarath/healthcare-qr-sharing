# Healthcare QR Sharing - Environment Variables Template
# Copy this file to .env and set your actual values

# Database Configuration
DB_URL=jdbc:postgresql://localhost:5432/healthcare_qr
DB_USERNAME=healthcare_user
DB_PASSWORD=your_secure_database_password

# Security Configuration
ENCRYPTION_KEY=your_base64_encoded_32_byte_key
JWT_SECRET=your_jwt_secret_key
DEFAULT_USER_PASSWORD=your_secure_user_password
DEFAULT_PROVIDER_PASSWORD=your_secure_provider_password

# SSL Configuration (Optional)
SSL_ENABLED=false
SSL_KEYSTORE=ssl/keystore.p12
SSL_KEYSTORE_PASSWORD=your_keystore_password

# Application Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=2555
SESSION_TIMEOUT=30
MAX_LOGIN_ATTEMPTS=3
LOCKOUT_DURATION=30

# Generate secure values with these commands:
# ENCRYPTION_KEY: openssl rand -base64 32
# JWT_SECRET: openssl rand -base64 64
# Passwords: openssl rand -base64 16